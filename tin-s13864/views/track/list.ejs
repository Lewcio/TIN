<%- include('./../fragments/header.ejs') %>
    <main>
        <h2>Tory</h2>
        <table class="table-list">
            <thead>
            <tr>
                <th>Lokalizacja</th>
                <th>Długość</th>
                <th>Akcje</th>
            </tr>
            </thead>
            <tbody>
            <% for (let track of tracks) { %>
            <tr>
                <td><%= track.location %></td>
                <td><%= track.length %> km</td>
                <td>
                    <ul class="list-actions">
                        <li>
                            <a href="/tracks/details/<%=track._id%>" class="list-actions-button-details">Szczegóły</a>
                        </li>
                        <% if(loggedUser) { %>
                        <li>
                            <a href="/tracks/edit/<%=track._id%>" class="list-actions-button-edit">Edytuj</a>
                        </li>
                        <li>
                            <a href="/tracks/delete/<%=track._id%>" class="list-actions-button-delete">Usuń</a>
                        </li>
                        <% } %>
                    </ul>
                </td>
            </tr>
            <% } %>
            </tbody>
        </table>
        <% if(loggedUser) { %>
        <p><a href="tracks/add" class="button-add">Dodaj nowy tor</a></p>
        <% } %>
    </main>
<%- include('./../fragments/footer.ejs') %>