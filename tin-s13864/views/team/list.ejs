<%- include('./../fragments/header.ejs') %>
    <main>
        <h2>Wszystkie drużyny</h2>
        <table class="table-list">
            <thead>
                <tr>
                    <th>Nazwa</th>
                    <th>Narodowość</th>
                    <th>Rok założenia</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
            <% for (let team of teams) { %>
                <tr>
                    <td><%= team.name %></td>
                    <td><%= team.nationality %></td>
                    <td><%= team.dateOfCreate.toISOString().split('T')[0] %></td>
                    <td>
                        <ul class="list-actions">
                            <li>
                                <a href="/teams/details/<%=team._id%>" class="list-actions-button-details">Szczegóły</a>
                            </li>
                            <% if(loggedUser) { %>
                            <li>
                                <a href="/teams/edit/<%=team._id%>" class="list-actions-button-edit">Edytuj</a>
                            </li>
                            <li>
                                <a href="/teams/delete/<%=team._id%>" class="list-actions-button-delete">Usuń</a>
                            </li>
                            <% } %>
                        </ul>
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
        <% if(loggedUser) { %>
        <p><a href="teams/add" class="button-add">Dodaj nową drużynę</a></p>
        <% } %>
    </main>
<%- include('./../fragments/footer.ejs') %>